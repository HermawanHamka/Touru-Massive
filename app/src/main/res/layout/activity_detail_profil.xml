<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".DetailProfilActivity">
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/txtEditProfil"
            android:layout_width="394dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="90dp"
            android:fontFamily="@font/poppins_extrabold"
            android:gravity="left"
            android:padding="20dp"
            android:text="Edit Profil"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imgBackBantuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:background="@color/blue"
            android:padding="20dp"
            android:src="@drawable/left_arrow"
            app:tint="@color/white" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="415dp"
        android:layout_height="290dp"
        android:layout_marginTop="1dp"
        android:src="@drawable/backgorundbiru"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="187dp"
        android:layout_height="217dp"
        android:src="@drawable/default_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/relativeLayout1"
        app:layout_constraintVertical_bias="0.184" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="384dp"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/linearLayoutUsername"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/inputext"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="346dp">

            <TextView
                android:layout_width="125dp"
                android:layout_height="62dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/poppins_semibold"
                android:paddingVertical="10dp"
                android:text="Username"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/profileNama"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/icon_next"
                android:paddingVertical="10dp"
                android:textSize="20dp"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginStart="8dp"
                android:drawablePadding="5dp"
                android:backgroundTint="@color/white"
                android:gravity="right" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="384dp"
            android:layout_marginVertical="10dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/inputext"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="346dp">

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="62dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingVertical="10dp"
                    android:text="Email"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/profileEmail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableRight="@drawable/icon_next"
                    android:paddingVertical="10dp"
                    android:textSize="20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginStart="8dp"
                    android:drawablePadding="5dp"
                    android:backgroundTint="@color/white"
                    android:gravity="right"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="409dp"
                android:layout_height="384dp"
                android:layout_marginVertical="10dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:id="@+id/linearLayoutKataSandi"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/inputext"
                    tools:layout_editor_absoluteX="1dp"
                    tools:layout_editor_absoluteY="346dp">

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="62dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:paddingVertical="10dp"
                        android:text="Kata Sandi"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/profilePass"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableRight="@drawable/icon_next"
                        android:paddingVertical="10dp"
                        android:textSize="20dp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginStart="8dp"
                        android:text="Selesai"
                        android:drawablePadding="5dp"
                        android:backgroundTint="@color/white"
                        android:gravity="right"
                     />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="409dp"
                    android:layout_height="384dp"
                    android:layout_marginVertical="10dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/inputext"
                        tools:layout_editor_absoluteX="1dp"
                        tools:layout_editor_absoluteY="346dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="62dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:paddingVertical="10dp"
                            android:text="Tanggal Lahir"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/profileLahir"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableRight="@drawable/icon_next"
                            android:paddingVertical="10dp"
                            android:textSize="20dp"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_marginStart="8dp"
                            android:drawablePadding="5dp"
                            android:backgroundTint="@color/white"
                            android:gravity="right"
                          />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="409dp"
                        android:layout_height="384dp"
                        android:layout_marginVertical="10dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginStart="16dp"
                            android:background="@drawable/inputext"
                            tools:layout_editor_absoluteX="1dp"
                            tools:layout_editor_absoluteY="346dp">

                            <TextView
                                android:layout_width="125dp"
                                android:layout_height="62dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginBottom="5dp"
                                android:fontFamily="@font/poppins_semibold"
                                android:paddingVertical="10dp"
                                android:text="No. Telepon"
                                android:textColor="@color/black"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/profileNo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:drawableRight="@drawable/icon_next"
                                android:paddingVertical="10dp"
                                android:textSize="20dp"
                                android:fontFamily="@font/poppins_regular"
                                android:layout_marginStart="8dp"
                                android:drawablePadding="5dp"
                                android:backgroundTint="@color/white"
                                android:gravity="right"
                                />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>